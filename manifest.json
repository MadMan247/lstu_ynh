{
	"name": "Lstu",
	"id": "lstu",
	"packaging_format": 1,
	"requirements": {
		"yunohost": ">= 2.4"
	},
	"description": {
		"en": "URL Shortener",
		"fr": "Raccoursisseur d'URL"
	},
	"url": "https://lstu.fr",
	"license": "WTFPL",
	"maintainer": {
		"name": "frju365",
		"email": "abld@abld.info"
	},
	"multi_instance": false,
	"services": [
		"nginx"
	],
	"arguments": {
		"install" : [
			{
				"name": "domain",
				"type": "domain",
				"ask": {
					"en": "Choose a domain for Lstu",
					"fr": "Choisissez un domaine pour Lstu"
				},
				"example": "domain.org"
			},
			{
				"name": "path",
				"type": "path",
				"ask": {
					"en": "Choose a path for Lstu",
					"fr": "Choisissez un chemin pour Lstu"
				},
				"example": "/lstu",
				"default": "/lstu"
			},
			{
				"name": "is_public",
				"type": "boolean",
				"ask": {
					"en": "Is it a public application?",
					"fr": "Est-ce une application publique ?"
				},
				"default": false
			}
		]
	}
}
